#!/bin/sh

#!/bin/bash
#
# cmsweb_phedex_graphs : starts / stops PhEDEx GraphTool server

RETVAL=$?

# Setup environment
PHEDEX_WEB_ROOT=@PHEDEX_ROOT@
source $PHEDEX_WEB_ROOT/etc/profile.d/init.sh
export GRAPHTOOL_PHEDEX_ROOT=$PHEDEX_WEB_ROOT/Documentation/WebSite/PlotConfig
export GRAPHTOOL_CONFIG_ROOT=$GRAPHTOOL_PHEDEX_ROOT/config
export PHEDEX_DBPARAM=$PHEDEX_WEB_ROOT/Documentation/WebConfig/DBParam

# Path hacks
export PYTHONPATH=$PYTHONPATH:$PY2_PIL_ROOT/lib/python2.4/site-packages/PIL:$WEBTOOLS_ROOT/lib/python2.4/site-packages/Tools/GraphTool/src
export PYTHONPATH=$GRAPHTOOL_PHEDEX_ROOT/src:$PYTHONPATH

pidfile=$APACHE2_CONF_ROOT/logs/phedex-graphs.pid
pid=`ps -p $(cat $pidfile 2>/dev/null) -o pid= 2> /dev/null`
cmd="python $GRAPHTOOL_PHEDEX_ROOT/tools/phedex-web-daemon.py --pidfile $pidfile"
name="PhEDEx graph service"

case "$1" in
 restart)
        if [ ! -z ${pid} ]; then
	    echo $"Restarting ${name}..."
	    kill -9 ${pid}; sleep 3;
	    ${cmd}
	    exit 0
        else
	    echo $"${name} was not running, will start..."
	    ${cmd}
	    exit 0
	fi
	;;
 start)
	echo $"Starting ${name}..."
        ${cmd}
	;;
 status)
	echo $"Checking ${name}..."
        if [ ! -z ${pid} ]; then
          echo $"${name} running, pid=${pid}"
          exit 0
        fi
        echo $"${name} is not running"
        exit 3
	;;
 stop)
	echo $"Stopping ${name}..."
        if [ ! -z ${pid} ]; then
	    kill -9 ${pid}
        fi
 	;;
 *)
 	echo $"Usage: $0 {start|stop|status|restart}"
	exit 1
	;;
esac

exit $RETVAL
